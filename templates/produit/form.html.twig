{% extends 'base.html.twig' %}

{% block title %}créer produit{% endblock %}

{% block body %}

    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1>Ajouter un produit</h1>
        </div>
    </div>

    {{ form_start(formulaire) }}

        <div class="row">
            <div class="col-3 offset-3">
                {{ form_row(formulaire.title, {
                    'label': 'Titre'
                }) }}
            </div>
            <div class="col-3">
                {{ form_row(formulaire.image) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6 offset-3">
                <div class="row">
                    <div class="col-4">
                        {{ form_row(formulaire.city, {
                            'label': 'Ville'
                        }) }}
                    </div>
                    <div class="col-4">
                        {{ form_row(formulaire.postalCode, {
                            'label': 'Code postal'
                        }) }}
                    </div>
                    <div class="col-4">
                        {{ form_row(formulaire.price, {
                            'label': 'Prix (€)'
                        }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6 offset-3">
                {{ form_row(formulaire.description) }}
            </div>
        </div>

        <div class="col-6 offset-3 text-end">
            <button class="btn btn-success" onclick="verifierFormulaire()">Créer</button>
        </div>

    {{ form_end(formulaire) }}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
