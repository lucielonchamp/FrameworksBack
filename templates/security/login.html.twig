{% extends 'base.html.twig' %}

{% block description %}Formulaire de connexion de la boutique en ligne {{ contact_company }}{% endblock %}

{% block title %}connexion{% endblock %}

{% block body %}

    <div class="container">

        <div class="row my-5">
            <div class="col-12 text-center">
                <h1>Connexion</h1>
            </div>
        </div>

        <div class="row mt-5 py-5">

            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">déconnexion</a>
                    </div>
                {% endif %}

                <div class="col-4 offset-4 mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="col-4 offset-4 mb-3">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me">Se souvenir de moi
                        </label>
                    </div>
                #}

                <div class="col-4 offset-4 mb-5 text-end">
                    <button class="btn btn-primary" type="submit">Connexion</button>
                </div>

            </form>
  
        </div>

        <div class="row text-center mb-5">
            <hr class="col-4 offset-4">
            <div class="col-12">
                <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créez-en-un !</a></p>
            </div>
        </div>

    </div>

{% endblock %}
