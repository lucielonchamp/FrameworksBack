{% extends 'baseAdmin.html.twig' %}

{% block title %}utilisateurs{% endblock %}

{% block body %}

    <h1 class="pb-5">Liste des utilisateurs</h1>

    <table class="table table-hover text-center align-middle">
        <thead>
            <tr>
                <th>N°</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ user.firstName ~ ' ' ~ user.lastName|upper }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(' + ')|replace({'ROLE_': ''})|replace({' + USER': ''})|lower }}</td>
                    <td>
                        <a href="#" class="me-2"><i class="bi bi-pencil-square text-primary"></i></a>
                        <a href="{{ path('user_delete', {'id': user.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')"><i class="bi bi-trash text-danger"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="4">Aucune utilisateur trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-end mt-4">
        <a href="{{ path('user_create') }}" class="btn btn-success">Ajouter un utilisateur</a>
    </div>

{% endblock %}
